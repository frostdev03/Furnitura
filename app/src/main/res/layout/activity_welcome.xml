<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeActivity">

    <ImageView
        android:id="@+id/corner"
        android:layout_width="210dp"
        android:layout_height="210dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="-10dp"
        android:src="@drawable/circle_corner" />

    <ImageView
        android:id="@+id/vector_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/woman_and_phone"
        android:layout_below="@+id/corner"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="12dp"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GET YOUR OWN FURNITURE"
        android:layout_below="@+id/vector_img"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textColor="#2F2E41"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textAllCaps="true"
        android:fontFamily="@font/poppinsbold"
        android:layout_marginTop="35dp"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temukan semua furniture yang kamu mau\nuntuk kamu yang anak kost\nsampe kamu yang anak tajir melintir\nsemua furnitur terbaik disini untukmu"
        android:layout_below="@+id/title"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textColor="#2F2E41"
        android:textAlignment="center"
        android:textSize="15sp"
        android:fontFamily="@font/poppinsregular"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_below="@+id/description"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="100dp"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="90dp"
        android:textSize="15sp"
        android:background="@drawable/btn_style"
        android:textColor="@color/white"
        android:fontFamily="@font/poppinssemibold"
        android:textAllCaps="false"
        android:text="Login" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_below="@+id/btn_login"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="90dp"
        android:textSize="15sp"
        android:background="@drawable/btn_style"
        android:textColor="@color/white"
        android:fontFamily="@font/poppinssemibold"
        android:textAllCaps="false"
        android:text="Register" />

</RelativeLayout>