<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeActivity">

    <ImageView
        android:id="@+id/corner"
        android:layout_width="210dp"
        android:layout_height="210dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="-10dp"
        android:src="@drawable/circle_corner" />

    <ImageView
        android:id="@+id/vector_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/woman_and_phone"
        android:layout_below="@+id/corner"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="12dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to the Furnitura"
        android:layout_below="@+id/vector_img"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textColor="#2F2E41"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textAllCaps="true"
        android:fontFamily="@font/poppinsbold"
        android:layout_marginTop="35dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to the Furnitura"
        android:layout_below="@+id/vector_img"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textColor="#2F2E41"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textAllCaps="true"
        android:fontFamily="@font/poppinsbold"
        android:layout_marginTop="35dp"/>

</RelativeLayout>